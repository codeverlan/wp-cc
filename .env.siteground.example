# SiteGround SFTP Configuration
SITEGROUND_HOST=sftp.siteground.net
SITEGROUND_PORT=18765
SITEGROUND_USERNAME=your_multisite_username_here
SITEGROUND_SSH_KEY_PATH=~/.ssh/siteground_multisite_rsa
SITEGROUND_SSH_KEY_PASSPHRASE=your_ssh_key_passphrase_here
SITEGROUND_REMOTE_PATH=/home/username/www/yourdomain.com/public_html

# GitHub Configuration (optional)
GITHUB_REPO=https://github.com/yourusername/your-repo.git
GITHUB_BRANCH=main
GITHUB_AUTO_PUSH=true

# Local Development Settings
LOCAL_SITE_NAME=parenting-fm
LOCAL_SITE_PATH=~/projects/parenting-fm/app/public

# Deployment Options
DEPLOY_CLEAR_CACHE=true
DEPLOY_BACKUP_BEFORE=false
DEPLOY_EXCLUDE_PATTERNS="node_modules/,.git/,.DS_Store,*.log,wp-config-local.php,.env"

# Jina AI API Key (for content generation)
JINA_API_KEY=your_jina_api_key_here

# WordPress Settings (for initial setup)
WP_ADMIN_USER=admin
WP_ADMIN_EMAIL=admin@example.com
WP_SITE_TITLE="My WordPress Site"
WP_SITE_TAGLINE="Another WordPress site"